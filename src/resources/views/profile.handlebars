
  <div class="card card-primary card-outline">
              <div class="card-body box-profile">
                <div class="text-center">
                  <img class="profile-user-img img-fluid img-circle"
                       src="../../themes/dist/img/user4-128x128.jpg"
                       alt="User profile picture">
                </div>

                <h3 class="profile-username text-center"></h3>

                <p class="text-muted text-center">{{user.name}}</p>
                <div class="container h-100 d-flex justify-content-center align-items-center">
                <ul class="list-group list-group-unbordered mb-3">
                  <li class="list-group-item">
                    <b>Email: </b> <a class="float-center">{{user.email}}</a>
                  </li>
                  <li class="list-group-item">
                    <b>Ngày sinh: </b> <a class="float-center">{{formatDate user.dob}}</a>
                  </li>
                  <li class="list-group-item">
                    {{#if user.gender}}
                    <b>Giới tính: </b> <a class="float-center">Nam</a>
                    {{else}}
                    <b>Giới tính: </b> <a class="float-center">Nữ</a>
                    {{/if}}
                  </li>
                <a href="#" class="btn btn-primary btn-block w-100"><b>Đổi mật khẩu</b></a>

                </ul>
                </div>
              </div>
              <!-- /.card-body -->
            </div>